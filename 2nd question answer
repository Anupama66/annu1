while true:
    print("enter 'x' for exist,")
    num=input("enter any number:")
    if num=='x':
        break
    try:
        number=int(num)
    except valueError:
        print("please enter a number...")
    else:
        orig=number
        rev=0
        while number>0:
            rev=(rev*10)+number%10
            number//=10;
        if orig=rev:
            print("original number & reverse number is the same ")
        else:
            print("the original and reverse number is not same")
    
